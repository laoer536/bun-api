{
  "name": "bun-api",
  "version": "1.0.50",
  "scripts": {
    "dev:server": "bun run --watch src/backend/index.ts",
    "dev:client": "cd src/frontend && bun run vite",
    "build:server": "bun build src/index.ts --outdir ./dist",
    "build:client": "cd src/frontend && tsc && vite build",
    "preview": "cd src/frontend && vite preview",
    "start": "NODE_ENV=production bun src/index.ts",
    "prisma:new": "prisma migrate dev && prisma generate",
    "prisma:pull": "prisma db pull && prisma generate",
    "prisma:push": "prisma db push && prisma generate"
  },
  "dependencies": {
    "@elysiajs/bearer": "^1.0.2",
    "@elysiajs/cors": "^1.0.2",
    "@elysiajs/eden": "^1.1.3",
    "@elysiajs/jwt": "^1.0.2",
    "@elysiajs/swagger": "^1.0.5",
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/exporter-jaeger": "^1.22.0",
    "@opentelemetry/resources": "^1.22.0",
    "@opentelemetry/sdk-trace-base": "^1.22.0",
    "@opentelemetry/sdk-trace-node": "^1.22.0",
    "@opentelemetry/semantic-conventions": "^1.22.0",
    "@prisma/client": "^5.11.0",
    "axios": "^1.7.7",
    "elysia": "latest",
    "ioredis": "^5.3.2",
    "nodemailer": "^6.9.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/nodemailer": "^6.4.14",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "bun-types": "latest",
    "prettier": "^3.2.5",
    "prisma": "^5.11.0",
    "unplugin-auto-import": "^0.18.3",
    "vite": "^4.0.0"
  }
}
