generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma_client"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int      @id @default(autoincrement()) // 自增
  createdAt DateTime @default(now()) // 创建时间
  updatedAt DateTime @updatedAt // 更新时间
  title     String   @db.VarChar(255) // 文章标题
  content   String? // 文章内容
  published Boolean  @default(false) // 发布状态
  authorId  Int // 作者id
  User      User     @relation(fields: [authorId], references: [id]) // 关联
}

model Profile {
  id     Int     @id @default(autoincrement())
  bio    String?
  userId Int     @unique
  User   User    @relation(fields: [userId], references: [id])
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String?
  Post    Post[]
  Profile Profile?
}
